    $response = $this->httpGet($path);
    $expected = array(
      'code' => 200,
      'content-type' => 'application/json; utf-8',
      'response' => array(
        array(
          'predicate' => array(
            'value' => 'hasModel',
            'namespace' => FEDORA_MODEL_URI,
            'alias' => 'fedora-model',
          ),
          'object' => array(
            'literal' => FALSE,
            'value' => 'islandora:collectionCModel',
          ),
        ),
        array(
          'predicate' => array(
            'value' => 'arbitrary',
            'alias' => 'fedora',
            'namespace' => FEDORA_RELS_EXT_URI,
          ),
          'object' => array(
            'literal' => TRUE,
